{% extends "../layout.twig" %}

{% block content %}
    <div class="jumbotron text-center">
    <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
                <div id="content_form">
                    <h2>Entre em contato!</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                        quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                        consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                        cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
                    proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                    <form>
                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Sua mensagem</label>
                            <input type="text" name="message" class="form-control">
                        </div>
                        <div class="form-group text-right">
                            <button type="submit" id="send" class="btn btn-primary btn-lg">Enviar</button>
                        </div>
                    </form>
                </div>
                <div id="content_res">

                </div>
          </div>
    </div>
    </div>
{% endblock %}



{% block script %}
<script>    
    const $send = document.querySelector('#send');
    const $name = document.querySelector('[name="name"]');
    const $email = document.querySelector('[name="email"]');
    const $msg = document.querySelector('[name="message"]');

    $send.addEventListener('click', (e) => {
        e.preventDefault();
        
        let form = document.querySelector('#content_form')
        let res = document.querySelector('#content_res')

        fetch('/contact', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                name: $name.value,
                email: $email.value,
                message: $msg.value
            })
        }).then(res => res.text()).then(
            (text) => {                
                console.log(text)

                form.classList.add('hide');
                res.innerHTML = `<h2>${text}</h2>`;                

                setTimeout(()=>{       

                    $name.value = '';
                    $email.value = '';
                    $msg.value = '';

                    form.classList.remove('hide');
                    res.innerHTML = '';

                }, 5000)
            }
        )
    });
</script>
{% endblock %}